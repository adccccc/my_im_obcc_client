<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <android.support.constraint.ConstraintLayout
            android:background="@color/colorBlue"
            android:layout_width="match_parent"
            android:layout_height="68dp">
        <TextView
                android:text="我"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>
    
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/image_fragment_me_icon"
                android:src="@drawable/icon_default"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="16dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
    
        <TextView
                android:id="@+id/text_fragment_me_nickname"
                android:textSize="24sp"
                android:text="昵称"
                android:textColor="@color/colorBlack"
                android:ellipsize="end"
                app:layout_constraintLeft_toRightOf="@+id/image_fragment_me_icon"
                app:layout_constraintTop_toTopOf="@+id/image_fragment_me_icon"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    
        <TextView
                android:id="@+id/text_fragment_me_username"
                android:textSize="18sp"
                android:text="账号：abcde"
                app:layout_constraintLeft_toRightOf="@+id/image_fragment_me_icon"
                app:layout_constraintBottom_toBottomOf="@+id/image_fragment_me_icon"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        
    </android.support.constraint.ConstraintLayout>
    
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
        <Button
                android:id="@+id/button_fragment_sign_out"
                android:background="@drawable/button_shape_red"
                android:textColor="@color/colorBlack"
                android:text="注销登录"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        
        
    </android.support.constraint.ConstraintLayout>
    

</LinearLayout>
