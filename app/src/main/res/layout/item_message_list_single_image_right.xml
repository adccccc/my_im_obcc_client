<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
            android:id="@+id/text_item_message_single_image_right_time"
            android:text="昨天 18:00"
            android:textSize="12sp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <LinearLayout
            android:gravity="right"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <com.github.library.bubbleview.BubbleImageView
                android:id="@+id/text_item_message_single_image_right_content"
                android:padding="10dp"
                app:bubbleColor="@color/colorBlue"
                app:arrowLocation="right"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:layout_width="180dp"
                android:layout_height="0dp"/>
        
        <ImageView
                android:id="@+id/image_item_message_single_image_right_icon"
                android:src="@drawable/icon_2"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
    </LinearLayout>


</LinearLayout>
