<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
            android:id="@+id/text_item_message_single_word_left_time"
            android:text="昨天 18:00"
            android:textSize="12sp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <ImageView
                android:id="@+id/image_item_message_single_word_left_icon"
                android:src="@drawable/icon_2"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            
            <TextView
                    android:id="@+id/text_item_message_single_word_left_name"
                    android:text="网友张顺飞"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            
            <com.github.library.bubbleview.BubbleTextView
                    android:id="@+id/text_item_message_single_word_left_content"
                    android:padding="10dp"
                    android:text="你好"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    app:bubbleColor="@color/colorWhite"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        
    </LinearLayout>

    
</LinearLayout>
